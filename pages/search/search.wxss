/* pages/search/search.wxss */
.searchContainer{
  padding: 0rpx 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0rpx;
}
.searchInput{
  flex: 1;
  border-radius: 30rpx;
  background-color: rgba(237, 237, 237, 0.3);
}
.cancel{
  width: 100rpx;
  text-align: center;
}
.searchIcon{
  position: absolute;
  left: 15rpx;
  top:0rpx;
}
.searchInput input{
  margin-left: 50rpx;
}

.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.hotItem .order{
  margin: 0 10rpx;
}
.hotItem .iconImg{
   width: 35rpx;
   height: 20rpx;
   margin-left: 10rpx;
}
.searchContent{
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx; 
  border-bottom: 1rpx solid #d43c33;
  color: #d43c33;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx; 
  display: flex;
}
.searchItem .content{
  flex:1;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
}
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.history .title{
  line-height: 50rpx;
  font-size: 28rpx;
  height: 50rpx;
}
.history .historyItem{
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  height: 50rpx;
}
.history .delete{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}
