/* pages/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 5个图标导航 */
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  background-color: #d43c33;
  margin: 20rpx 0;
  color: #fff;
  font-size: 50rpx;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌手区域 */
.recommendContainer{
  padding: 20rpx;
}

.recommendContainer .header .title{
  font-size: 30rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .header .more{
  float: right;
  border: 1rpx solid #333;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 推荐内容区 */
.recommendScroll{
  display: flex;
  margin-top: 20rpx;
  height: 300rpx;
}

.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  /* 多行文本溢出 */
  /* overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;  */
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}

.topListSwiper{
  height: 450rpx;
}

.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}

.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}

.swiperItem .title{
  line-height: 80rpx;
  font-size: 30rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  line-height: 100rpx;
  height: 100rpx;
  text-align: center;
  width: 100rpx;
}
.musicItem .musicName{
  line-height: 100rpx;
  height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


